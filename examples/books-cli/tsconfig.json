{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
