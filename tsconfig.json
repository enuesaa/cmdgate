{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {},
    "types": ["vitest/globals"]
  },
  "include": ["**/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
